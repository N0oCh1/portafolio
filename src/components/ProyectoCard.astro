---
import type { HTMLAttributes } from "astro/types";


interface Props extends HTMLAttributes<'div'> {
    tecnology?: Array<"astro" | "tailwind" | "nextjs" | "react" | "javascript" | "html" | "css">;
    status: "deploy"|"onlyGit"|"unfinished" ;
    gitUrl?: string;
    link?: string;
    image: string;
    title: string;
}
const {
    image, title, status, tecnology, gitUrl, link
} = Astro.props;
---

<div class="flex flex-col gap-3 rounded-xl border border-white p-6 max-w-[360px]">
    <img src={image} class="imgCard"/>
    <header class="header flex flex-col gap-1">
        <h1 class="text-2xl font-bold">
            {title}
        </h1>
        <article class="text-xl">
            <slot />
        </article> 
    </header>
    <div class="flex flex-col">
        <div class="flex flex-wrap gap-">
            {tecnology?.map(item=>(
                <div class="background-Image">
                    <img src={`${item}.svg`} width="30" height="30"/>
                </div>
            ))}
        </div>
    </div>
</div>


<style>
    .imgCard{
        width: 100%;
        height: 155px;
        object-fit: cover;
        object-position: 50% 50%;
    }
    .background-Image{
        background-image: radial-gradient(circle at center ,rgba(255, 255, 255, 0.438) 0 , #11083400 75%);
    }
</style>