---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<'div'> {
    image?: string;
    state?: String;
    title?: string;
}
const {
    image, state, title 
} = Astro.props;
---

<div class="cardProyect flex flex-row gap-6">
    <img src={image} class="imgCard"/>
    <div class="cardContainer">
        <div class="header">
            <h1>
                {title}
            </h1>
            <div class="stateTag">
                {state}
            </div>
        </div>
        <span class="textCard w-full">
            Sample Text
        </span>
    </div>
</div>


<style>
    .cardProyect{
        width: 100%;
        height: auto;
        padding: 1rem;
        border-radius:  0.4375rem;
        border: 2px solid gray
    }
    .imgCard{
        object-fit: fill;
        width: 100px;

        aspect-ratio: 4/3;
    }
    .cardContainer{
        width: 100%;
        display: flex ;
        flex-direction: column;
        gap: 1rem;
    }
    .header{
        display: flex;
        gap: 3rem;
        flex-direction: row;
        justify-content: space-between;
    }
    .stateTag{
        height: max-content;

        font-size: small;
        padding: 2px;
        background-color: green;
        border-radius: 0.4375rem;

    }
</style>