---
import type { HTMLAttributes } from "astro/types"; 
interface Props extends HTMLAttributes<'div'> {
    icon: string;
    name?: string;
    iconSize?: string 
}
const { 
    icon , name , iconSize, ...rest
} = Astro.props
---

<div {...rest} class="flex flex-col justify-center items-center span-1 h-max">
    <img src={icon} alt={name} loading="lazy" width={iconSize}/>
    <span class="block text-[1.3vw]">{name}</span>
</div>

